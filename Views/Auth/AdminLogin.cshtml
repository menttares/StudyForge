@model AuthenticateViewModel
@{
    ViewData["Title"] = "Авторизация";
}

@using (Html.BeginForm("AdminLogin", "Auth", FormMethod.Post, new { @class = "form-main" }))
{
    <div class="text-center">
        авторизация как администратор
    </div>

    <div class="form-group mt-3">
    @Html.LabelFor(model => model.Email, "Почта", htmlAttributes: new { @class = "auth-label" })
    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "Введите почту" })
    <span class="validation-span">
        @Html.ValidationMessageFor(model => model.Email)
    </span>
</div>
    <div class="form-group mt-3">
    @Html.LabelFor(model => model.Password, "Пароль", htmlAttributes: new { @class = "auth-label" })
    @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "Введите пароль" })
    <span class="validation-span">
        @Html.ValidationMessageFor(model => model.Password)
    </span>
</div>
    <div id="error-message">
    <!-- Ошибки общего характера можно сюда -->
</div>
    <div class="auth-button text-center mt-3">
    <input type="submit" class="btn btn-primary btn-lg" value="Вход" />
</div>
    <div class="auth-links text-center mt-3">
    <a asp-controller="Auth" asp-action="Register" class="btn-link">Вход как обычный пользователь</a>
</div>
}
