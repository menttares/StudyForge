<!DOCTYPE html>
<html lang="ru">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>StudyForge</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/StudyForge.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons-1.11.3/font/bootstrap-icons.min.css">

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        body {
            display: flex;
            min-height: 100vh;
            flex-direction: column;
            margin: 0;
        }

        .container-fluid {
            flex: 1;
            display: flex;
            padding: 0;
        }

        .side-panel {
            width: 250px;
            background-color: #212529;
            color: white;
            display: flex;
            flex-direction: column;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            z-index: 1000;
            overflow-y: auto;
            transition: transform 0.3s ease;
        }

        .side-panel .btn {
            color: white;
            text-align: left;
            width: 100%;
        }

        .main-content {
            margin-left: 250px;
            padding: 20px;
            flex: 1;
            transition: margin-left 0.3s ease;
        }

        footer {
            background-color: #f8f9fa;
            padding: 10px 0;
            text-align: center;
            margin-top: auto;
        }

        /* Медиа-запрос для мобильных устройств */
        @@media (max-width: 767.98px) {
            .side-panel {
                transform: translateX(-100%);
            }

            .main-content {
                margin-left: 0;
            }

            header {
                margin-left: 0 !important;
            }
        }

        header {
            margin-left: 250px;
        }

        .side-panel-img {
            border-radius: 50%;
            width: 120px;
            height: 120px;
        }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow p-2">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo.png" alt="StudyForge Logo" style="height: 40px;">
                </a>
                <a class="navbar-brand text-uppercase fw-bold" asp-area="" asp-controller="Home"
                    asp-action="Index">StudyForge</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home"
                                asp-action="Index">Главная</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home"
                                asp-action="Search">Обучение</a>
                        </li>
                        <li class="nav-item">
                            @if (User.IsInRole("admin"))
                            {
                                <a class="nav-link text-dark" href="/Admin/Main/">Панель администратора</a>
                            }
                            else if (User.IsInRole("user"))
                            {
                                <a class="nav-link text-dark" href="/СontrolPanel/">Личный кабинет</a>
                            }
                            else
                            {
                                <a class="nav-link text-dark" href="/СontrolPanel/">Вход в аккаунт</a>
                            }
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">

        <div class="side-panel">
            <div class="p-3">
                <div class="mb-1 d-flex align-items-center justify-content-center">
                    <div class="side-panel-img bg-white d-flex align-items-center justify-content-center">
                        <a class="brand d-flex align-items-center justify-content-center" href="#">
                            <img src="~/images/logo.png" alt="StudyForge Logo" style="height: 80px;" class="">
                        </a>
                    </div>


                </div>
                <h4 class="text-light">Боковая панель</h4>
                <hr class="line bg-light">
                <button type="button" class="btn btn-dark mb-2 btn-control" data-page="Profile">
                    <i class="bi bi-person"></i> Профиль
                </button>
                <button type="button" class="btn btn-dark mb-2 btn-control" data-page="Home">
                    <i class="bi bi-house"></i> Главная
                </button>
                <button type="button" class="btn btn-dark mb-2 btn-control" data-page="Statistics">
                    <i class="bi bi-bar-chart"></i> Статистика
                </button>
                <button type="button" class="btn btn-dark mb-2 btn-control" data-page="Courses">
                    <i class="bi bi-book"></i> Курсы
                </button>
                <button type="button" class="btn btn-dark mb-2 btn-control" data-page="Applications">
                    <i class="bi bi-file-earmark"></i> Заявки
                </button>
                <a asp-action="LogOut" asp-controller="СontrolPanel" class="btn btn-control text-light"
                    data-page="LogOut"><i class="bi bi-box-arrow-right"></i>Выйти</a>
            </div>
        </div>

        <div class="main-content">
            <div class="d-md-none text-center"> <!-- Этот блок будет виден только на мобильных устройствах -->
                <div class="col-md-3 d-md-none text-center mt-3">
                    <!-- Этот блок будет виден только на мобильных устройствах -->
                    <div class="dropdown">
                        <button class="btn btn-dark btn-lg btn-block dropdown-toggle" type="button"
                            data-bs-toggle="dropdown" aria-expanded="false">
                            Меню
                        </button>
                        <div class="dropdown-menu">
                            <button type="button" class="btn btn-lg btn-control" data-page="Profile">Профиль</button>
                            <button type="button" class="btn btn-lg btn-control" data-page="Home">Главная</button>
                            <button type="button" class="btn btn-lg btn-control"
                                data-page="Statistics">Статистика</button>
                            <button type="button" class="btn btn-lg btn-control" data-page="Courses">Курсы</button>
                            <button type="button" class="btn btn-lg btn-control"
                                data-page="Applications">Заявки</button>
                            <a asp-action="LogOut" asp-controller="СontrolPanel" class="btn btn-control"
                                data-page="LogOut">Выйти</a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="container mt-2" id="container-main-content">

                @RenderBody()
            </div>
        </div>
    </div>

    <footer>
        &copy; 2024 - StudyForge
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/NotificationManager.js" asp-append-version="true"></script>
    <script src="~/js/СontrolPanel.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    @* <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script> *@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    @* <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script> *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
